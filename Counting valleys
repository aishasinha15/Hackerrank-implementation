   long long int v=0,h=0;
for(int i=0;i<steps;i++){
    if(path[i]=='D'){
           h-=1;
        if(h<0&&((h+1)==0)){
            if(path[i+1]=='U'){
              v++;
        }
        } 
        
    }
    else {
          h+=1;
         if(h<0&&((h+1)==0)){
             if(path[i+1]=='U'){
              v++;
        } 
        
        }
        
    }
}
return v;
